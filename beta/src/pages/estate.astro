---
import sanityClient from "lib/sanityClient"
import Default from "layouts/Default.astro"
import Estate from "components/Estate.astro"
import { estateQuery } from "lib/queries"
import {
  LabelGroup,
  Navigation,
  LocalePage,
  LocalePhotography,
  LocaleSettings
} from "lib/interfaces"

const response = await sanityClient.fetch(estateQuery)
const data: {
  labels: LabelGroup
  navigation: Navigation
  settings: LocaleSettings
  page: LocalePage
  photography: LocalePhotography
} = await response
const { labels, navigation, settings, page, photography } = data
const languages = ["English", "Polski"]
const locales = ["", "pl"]
---

<Default
  labels={labels.en}
  languages={languages}
  locales={locales}
  navigation={navigation.en}
  page={page.en}
  settings={settings.en}
>
  <Estate
    labels={labels.en}
    page={page.en}
    photography={photography.en}
    settings={settings.en}
  />
</Default>
