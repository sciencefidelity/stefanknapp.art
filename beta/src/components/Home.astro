---
import "modern-normalize"
import "styles/global.scss"
import "styles/index.scss"
import BaseHead from "components/BaseHead.astro"
import FrontNav from "components/FrontNav.astro"
import { NavItem, LocaleSettings } from "lib/interfaces"

const { languages, locales, navigation, settings } = Astro.props as {
  languages: string[]
  locales: string[]
  navigation: NavItem[]
  settings: LocaleSettings
}
const artist = "Knapp"
const year = new Date().getFullYear()
---

<head>
  <BaseHead settings={settings} />
</head>
<body>
  <main id="site-main">
    <div class="container-fluid">
      <div class="row">
        <div class="col logo">
          <div class="circle">
            <a href={navigation[0].url}>
              <div class="title">
                <h1>{artist.toUpperCase()}</h1>
              </div>
            </a>
          </div>
        </div>
        <FrontNav
          navItems={navigation}
          title={settings.title}
          locales={locales}
        />
      </div>
      <div class="row">
        <div class="col">
          <div class="spacer"></div>
        </div>
      </div>
      <footer class="row">
        <nav class="front-lang">
          <p>
            <a href={`/${locales[1]}`}>{languages[1].toUpperCase()}</a>
          </p>
        </nav>
        <div class="front-copy">
          <p>&copy; {year} {settings.title}</p>
        </div>
      </footer>
    </div>
  </main>
  <script is:inline>
    let showMenu = false
    const menu = document.querySelector("#menu-button")
    const nav = document.querySelector("#nav")
    const toggleMenu = () => {
      if (!showMenu) {
        menu.classList.add("hamburger__icon--active")
        nav.classList.remove("nav__inactive")
        nav.classList.add("nav__active")
        showMenu = true
      } else {
        menu.classList.remove("hamburger__icon--active")
        nav.classList.remove("nav__active")
        nav.classList.add("nav__inactive")
        showMenu = false
      }
    }
  </script>
</body>

