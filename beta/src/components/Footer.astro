---
import { Label, LocaleSettings } from "lib/interfaces"

const { i18nSlug, labels, languages, locales, settings } = Astro.props as {
  i18nSlug: string
  labels: Label[]
  languages: string[]
  locales: string[]
  settings: LocaleSettings
}
const year = new Date().getFullYear()
---

<footer>
  <div class="footer__container">
    <div class="footer__links">
      <div v-if="$context.locale === 'en-gb'" class="footer__btn">
        <a href={`/${locales[0]}`}>{labels[2].text.toUpperCase()}</a>
      </div>
      <a href={`/${locales[1] && locales[1] + "/"}${i18nSlug}`}>
        {languages[1].toUpperCase()}
      </a>
    </div>
    <div>&copy; {year} {settings.title}</div>
  </div>
</footer>
